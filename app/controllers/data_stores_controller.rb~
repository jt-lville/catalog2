class DataStoresController < ApplicationController
  # GET /date_stores
  # GET /date_stores.json
  def index
    @data_store = DateStore.all

    respond_to do |format|
      format.html # index.html.erb
      format.json { render json: @data_store }
    end
  end

  # GET /date_stores/1
  # GET /date_stores/1.json
  def show
    @data_store = DataStore.find(params[:id])

    respond_to do |format|
      format.html # show.html.erb
      format.json { render json: @data_store }
    end
  end

  # GET /date_stores/new
  # GET /date_stores/new.json
  def new
    @data_store = DataStore.new

    respond_to do |format|
      format.html # new.html.erb
      format.json { render json: @data_store }
    end
  end

  # GET /date_stores/1/edit
  def edit
    @data_store = DataStore.find(params[:id])
  end

  # POST /date_stores
  # POST /date_stores.json
  def create
    @data_store = DataStore.new(params[:date_store])

    respond_to do |format|
      if @data_store.save
        format.html { redirect_to @data_store, notice: 'Date store was successfully created.' }
        format.json { render json: @data_store, status: :created, location: @data_store }
      else
        format.html { render action: "new" }
        format.json { render json: @data_store.errors, status: :unprocessable_entity }
      end
    end
  end

  # PUT /date_stores/1
  # PUT /date_stores/1.json
  def update
    @data_store = DateStore.find(params[:id])

    respond_to do |format|
      if @data_store.update_attributes(params[:date_store])
        format.html { redirect_to @data_store, notice: 'Date stora was successfully updated.' }
        format.json { head :no_content }
      else
        format.html { render action: "edit" }
        format.json { render json: @data_store.errors, status: :unprocessable_entity }
      end
    end
  end

  # DELETE /date_stores/1
  # DELETE /date_stores/1.json
  def destroy
    @data_store = DataStore.find(params[:id])
    @data_store.destroy

    respond_to do |format|
      format.html { redirect_to data_stores_url }
      format.json { head :no_content }
    end
  end
end
